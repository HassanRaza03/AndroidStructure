<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/x10dp"
    android:background="@drawable/rounded_box_white_more_rounded"
    android:orientation="vertical"
    android:padding="@dimen/x10dp">


    <com.android.structure.widget.AnyTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x5dp"
        android:gravity="center"
        android:text="Title"
        android:textColor="#414141"
        android:textSize="@dimen/s16"
        app:typeface="@string/font_bold" />


    <ImageView
        android:id="@+id/imgSeperatorLine"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="@dimen/x15dp"
        android:background="#E2E2E2" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/x15dp"

        android:layout_weight="1">

        <com.android.structure.widget.AnyTextView
            android:id="@+id/txtMessage"
            android:layout_width="@dimen/x260dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:minLines="2"
            android:text="message"
            android:textColor="@color/txtBlue"
            android:textSize="@dimen/s14"
            app:typeface="@string/font_regular" />

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x20dp"
        android:layout_marginRight="@dimen/x20dp"

        android:gravity="center_vertical"
        android:orientation="horizontal">


        <info.hoang8f.widget.FButton
            android:id="@+id/btnButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8dp"
            android:layout_marginRight="@dimen/x8dp"
            android:layout_weight="1"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s10"
            app:cornerRadius="@dimen/x8dp"
            app:fButtonColor="@color/button_color2"
            app:shadowColor="#3000"
            app:shadowEnabled="true"
            app:shadowHeight="1dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/btnButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8dp"
            android:layout_marginRight="@dimen/x8dp"
            android:layout_weight="1"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s10"
            app:cornerRadius="@dimen/x8dp"
            app:fButtonColor="@color/button_color1"
            app:shadowColor="#3000"
            app:shadowEnabled="true"
            app:shadowHeight="1dp" />


    </LinearLayout>


</LinearLayout>
